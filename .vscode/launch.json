{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Backend (FastAPI 8010)",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "cwd": "${workspaceFolder}/backend",
        "args": ["main:app", "--host", "0.0.0.0", "--port", "8010", "--reload"]
      },
      {
        "name": "Frontend (Next 3010)",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev", "--", "--hostname", "0.0.0.0", "--port", "3010"],
        "console": "integratedTerminal"
      }
    ]
  }
  